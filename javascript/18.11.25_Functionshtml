    <script>

        function getUserInfo() {
            var user = {
                id: 1,
                name: "Rahul Sharma",
                age: 21,
                email: "rahul.sharma@example.com",
                phone: "9876543210",
                address: "Delhi, India"
            };

            document.getElementById('user-id').innerHTML = user.id;
            document.getElementById('name').innerHTML = user.name;
            document.getElementById('age').innerHTML = user.age;
            document.getElementById('email-address').innerHTML = user.email;
            document.getElementById('phone').innerHTML = user.phone;
            document.getElementById('address').innerHTML = user.address;
        }
    </script>
